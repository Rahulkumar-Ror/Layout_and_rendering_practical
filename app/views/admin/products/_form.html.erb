<div class="col-lg-6 mx-lg-auto">
<div class="card shadow">
<div class="card-header">
<h2 class="card-title text-center", style="color:red;">Product</h2>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style = "color:red"><%= error %></p>
  <% end %>
<% end %>

<%= form_with model: [:admin, @product] do |form| %>

<div>
  <%= form.label :name %></br>
	<%= form.text_field :name, placeholder: "Enter a product name" %>
</div>

<div>
  <%= form.label :description %><br/>
	<%= form.text_area :description, placeholder: "Enter a product description" %>
</div>

<div>
  <%= form.label :price %>
	<%= form.number_field :price, placeholder : "$$$$$$" %>
</div>

<div>
  <%= form.submit %>
</div>

<% end %>