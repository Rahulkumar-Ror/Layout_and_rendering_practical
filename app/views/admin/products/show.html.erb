<div class="col-lg-6 mx-lg-auto">
<div class="card shadow">
<div class="card-header">
<h2 class="card-title text-center", style="color:red;">Order your product</h2>
<center>
<table>
	<th>Product Title</th>
	<th>Product Description</th>
	<th>Product Price</th>
	<tr>
	  <td><%= @product.title %></td>
		<td><%= @product.description %></td>
		<td><%= @product.price %></td>
	</tr>
</table>
</center>
<br/><br/>
<center>
<% if @product.orders.any? %>
	<th>Below is the list <b><%= @product.title %></b> order </th>
	<table>
		<th>Order ID</th>
		<th>Quantity of order</th>
		<th colspan=4 >Actions</th>
	<% @product.orders.each do |order| %>
		<tr>
			<td><%= order.id %></td>
			<td><%= order.quantity %></td>
			<td><%= button_to "Show", admin_order_path(order.id),method: :get %></td>
			<td><%= button_to "Edit", edit_admin_order_path(order.id),method: :get %></td>
			<td><%= button_to "Delete", admin_order_path(order.id),method: :delete %></td> 
			<td><%= button_to "Back", admin_products_path,method: :get %></td>
		</tr>
  <% end %>
  <% else %>
    <th >Not any order for this <b><%= @product.title %></b> product</th>
  <% end %>
  </table>
</center>

<center>
  <div>
	  <b><%= link_to "Place a order", new_admin_product_order_path(@product, @order), method: :get %></b>
	</div>
</center>
