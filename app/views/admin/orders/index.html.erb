
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style = "color:red"><%= error %></p>
  <% end %>
<% end %>
<h1>Product with Orders</h1>
<center>
  <table>
    <th>Title</th>
    <th>Quantity</th>
    <th>Total Price</th>
      <% @orders.each do |order| %>
        <tr>
          <%= render 'order' %>
        </tr>
      <% end %>
  </table>
</center>

<center>
  <div> 
    <%= link_to "Back", admin_products_path %>
  </div>
</center>
