<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<div class="col-lg-6 mx-lg-auto">
<div class="card shadow">
<div class="card-header">
<center><h2 style="color:red;">***** User => Merchant *****</h2></center>
<body style="background-color: rgb(71, 226, 123);"  >
<center>
  <p class="notice" style="color: green"><%= notice %></p>
  <p class="alert" style="color: red"><%= alert %></p>
</center>
<%= stylesheet_link_tag "application" %>
<center>

<h1 class="alert alert-success" align= "center">Welcome to merchant page</h1>

<h2>Products</h2>

  <table>
    <th>Title of product</th>
    <th>Description of product</th>
    <th>Price of product</th>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
    </tr>
    <% end %>
  </table>
</center>

<center>
<br/>
<h2>Orders</h2>
  <table>
    <th>Title of product</th>
    <th>Quantity of order</th>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.product.title %></td>
      <td><%= order.quantity %></td>
    </tr>
    <% end %>
</table>
</center>

<center>
  <th><%= link_to "sign Out", destroy_user_session_path, method: :delete , class:"btn btn-danger float-right mb-3 mt-3"%></th>
</center>
</body>
