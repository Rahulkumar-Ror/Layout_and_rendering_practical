<div class="col-lg-6 mx-lg-auto">
<div class="card shadow">
<div class="card-header">
<h2 class="card-title text-center", style="color:red;">User => Merchant</h2>
<body >

<center>
  <p class="notice" style="color: green"><%= notice %></p>
  <p class="alert" style="color: red"><%= alert %></p>
</center>
<%= stylesheet_link_tag "application" %>
<center>

<h1>Welcome to merchant page</h1>

<h2>Products</h2>

  <table>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
    </tr>
    <% end %>
  </table>
</center>

<center>
<h2>Orders</h2>
  <table>
    <th>Name</th>
    <th>Quantity</th>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.product.name %></td>
      <td><%= order.quantity %></td>
    </tr>
    <% end %>
</table>
</center>

<center>
  <%= button_to "sign Out", destroy_user_session_path, method: :delete %></br>
</center>
</body>